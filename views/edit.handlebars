<div class="container py-5">
  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">

      {{#if isError}}
      <div class="alert alert-danger" role="alert">
        <span class="mr-2">未填寫必填欄位</span>
      </div>
      {{/if}}

      <form action="/restaurants/{{data.id}}/edit?_method=PUT" method="POST">
        <div class="form-group form-row">
          <label for="length" class="col-md-3 col-form-label">* name</label>
          <div class="col-md-9">
            <input type="text" placeholder="name" name="name" value="{{data.name}}">
          </div>
        </div>

        <div class="form-group form-row">
          <label for="length" class="col-md-3 col-form-label">* name_en</label>
          <div class="col-md-9">
            <input type="text" placeholder="name_en" name="name_en" value="{{data.name_en}}">
          </div>
        </div>

        <div class="form-group form-row">
          <label for="length" class="col-md-3 col-form-label">* category</label>
          <div class="col-md-9">
            <input type="text" placeholder="category" name="category" value="{{data.category}}">
          </div>
        </div>

        <div class="form-group form-row">
          <label for="length" class="col-md-3 col-form-label">* image</label>
          <div class="col-md-9">
            <input type="text" placeholder="image" name="image" value="{{data.image}}">
          </div>
        </div>

        <div class="form-group form-row">
          <label for="length" class="col-md-3 col-form-label">* location</label>
          <div class="col-md-9">
            <input type="text" placeholder="location" name="location" value="{{data.location}}">
          </div>
        </div>

        <div class="form-group form-row">
          <label for="length" class="col-md-3 col-form-label">* phone</label>
          <div class="col-md-9">
            <input type="text" placeholder="phone" name="phone" value="{{data.phone}}">
          </div>
        </div>

        <div class="form-group form-row">
          <label for="length" class="col-md-3 col-form-label">* google_map</label>
          <div class="col-md-9">
            <input type="text" placeholder="google_map" name="google_map" value="{{data.google_map}}">
          </div>
        </div>

        <div class="form-group form-row">
          <label for="length" class="col-md-3 col-form-label">* rating</label>
          <div class="col-md-9">
            <input type="number" placeholder="rating" name="rating" min="0" max="5" step="0.1" value="{{data.rating}}">
          </div>
        </div>

        <div class="form-group form-row">
          <label for="length" class="col-md-3 col-form-label">* description</label>
          <div class="col-md-9">
            <input type="text" placeholder="description" name="description" value="{{data.description}}">
          </div>
        </div>

        <div class="col-12 p-0 d-flex justify-content-end">
          <a href="/" class="border border-primary btn-sm btn-outline-primary mr-2">Back</a>
          <button type="submit" class="border border-primary btn-sm btn-outline-primary">Edit</button>
        </div>

      </form>
    </div>
  </div>
</div>