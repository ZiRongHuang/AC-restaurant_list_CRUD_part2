<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" value="{{keyword}}" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major rounded-right" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
          <select class="form-control ml-2" name="sort" onchange="this.form.submit()">
            <option value="asc" {{{select sort 'asc'}}}>A -> Z</option>
            <option value="desc" {{{select sort 'desc'}}}>Z -> A</option>
            <option value="category" {{{select sort 'category'}}}>類別</option>
            <option value="location" {{{select sort 'location'}}}>地區</option>
          </select>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-3">

  <div class="row">
    <div class="col-md-12 col-12 mx-auto">
      <div class="col-12 p-0 d-flex justify-content-end mb-4">
        {{#if keyword}}
        <a href="/" class="border border-primary btn-sm btn-outline-primary mr-1">Back</a>
        {{/if}}
        <a href="/restaurants/new" class="border border-primary btn-sm btn-outline-primary">Create</a>
      </div>

      <div class="row">
        {{#each restaurants}}
        <div class="col-md-4 text-secondary mb-3">
          <div class="card mb-3">
            <a href="/restaurants/{{this.id}}">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" draggable="false">
            </a>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <br><br>

              <a href="/restaurants/{{this.id}}/edit" class="border border-primary btn-sm btn-outline-primary">Edit</a>
              <a href="/restaurants/{{this.id}}" class="border border-primary btn-sm btn-outline-primary">Detail</a>
              <form action="/restaurants/{{this.id}}/delete?_method=DELETE" method="POST" style="display: inline;"
                onSubmit="return confirm('確定刪除？');">
                <button type="submit" class="border border-danger btn-sm btn-outline-danger"
                  style="cursor: pointer">Delete</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}

      </div>
    </div>
  </div>
</div>